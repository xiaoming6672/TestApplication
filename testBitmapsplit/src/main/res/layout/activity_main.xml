            app:layout_constraintLeft_toRightOf="@id/iv_part_7"
            app:layout_constraintRight_toLeftOf="@id/iv_part_9"
            app:layout_constraintTop_toBottomOf="@id/iv_part_5"
            tools:src="#a65afc" />

        <ImageView
            android:id="@+id/iv_part_9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@null"
            android:padding="2dp"
            app:layout_constraintBottom_toTopOf="@id/iv_part_12"
            app:layout_constraintLeft_toRightOf="@id/iv_part_8"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_part_6" />

        <ImageView
            android:id="@+id/iv_part_10"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@null"
            android:padding="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/iv_part_11"
            app:layout_constraintTop_toBottomOf="@id/iv_part_7"
            tools:src="#984653" />

        <ImageView
            android:id="@+id/iv_part_11"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@null"
            android:padding="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/iv_part_10"
            app:layout_constraintRight_toLeftOf="@id/iv_part_12"
            app:layout_constraintTop_toBottomOf="@id/iv_part_8"
            tools:src="#657328" />

        <ImageView
            android:id="@+id/iv_part_12"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@null"
            android:padding="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/iv_part_11"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_part_9"
            tools:src="#654128" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>